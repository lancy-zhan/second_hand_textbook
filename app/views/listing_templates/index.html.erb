<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All listings
    </h1>

    <a href="/listings/new" class="btn btn-block btn-outline-secondary">
      Add a new listing
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Transaction
        </th>

        <th>
          Isbn
        </th>

        <th>
          Course
        </th>

        <th>
          Photo url
        </th>

        <th>
          Price
        </th>

        <th>
          Description
        </th>

        <th>
          Creator
        </th>

        <th>
          Quarter
        </th>

        <th>
          School year
        </th>

        <th>
          Tittle
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @listings.each do |listing| %>
      <tr>
        <!-- Display listing.id start -->
        <td>
          <%= listing.id %>
        </td>
        <!-- Display listing.id end -->

        <!-- Display listing.transaction_id start -->
        <td>
          <%= listing.transaction_id %>
        </td>
        <!-- Display listing.transaction_id end -->

        <!-- Display listing.isbn start -->
        <td>
          <%= listing.isbn %>
        </td>
        <!-- Display listing.isbn end -->

        <!-- Display listing.course start -->
        <td>
          <%= listing.course %>
        </td>
        <!-- Display listing.course end -->

        <!-- Display listing.photo_url start -->
        <td>
          <img src='<%= listing.photo_url %>' class='img-fluid'>
        </td>
        <!-- Display listing.photo_url end -->

        <!-- Display listing.price start -->
        <td>
          <%= listing.price %>
        </td>
        <!-- Display listing.price end -->

        <!-- Display listing.description start -->
        <td>
          <%= listing.description %>
        </td>
        <!-- Display listing.description end -->

        <!-- Display listing.creator_id start -->
        <td>
          <%= listing.creator_id %>
        </td>
        <!-- Display listing.creator_id end -->

        <!-- Display listing.quarter start -->
        <td>
          <%= listing.quarter %>
        </td>
        <!-- Display listing.quarter end -->

        <!-- Display listing.school_year start -->
        <td>
          <%= listing.school_year %>
        </td>
        <!-- Display listing.school_year end -->

        <!-- Display listing.tittle start -->
        <td>
          <%= listing.tittle %>
        </td>
        <!-- Display listing.tittle end -->

        <!-- Display listing.created_at start -->
        <td>
          <%= time_ago_in_words(listing.created_at) %> ago
        </td>
        <!-- Display listing.created_at end -->

        <!-- Display listing.updated_at start -->
        <td>
          <%= time_ago_in_words(listing.updated_at) %> ago
        </td>
        <!-- Display listing.updated_at end -->

        <td>
          <a href="/listings/<%= listing.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
