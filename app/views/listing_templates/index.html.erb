<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All listings
    </h1>

    <a href="/listings/new" class="btn btn-block btn-outline-secondary">
      Add a new listing
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "listing_templates/listings_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Transaction
        </th>

        <th>
          Isbn
        </th>

        <th>
          Course
        </th>

        <th>
          Photo url
        </th>

        <th>
          Price
        </th>

        <th>
          Description
        </th>

        <th>
          Creator
        </th>

        <th>
          Quarter
        </th>

        <th>
          School year
        </th>

        <th>
          Tittle
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @listings.each do |listing| %>
      <tr>
        <td>
          <%= listing.id %>
        </td>

        <td>
          <%= listing.transaction_id %>
        </td>

        <td>
          <%= listing.isbn %>
        </td>

        <td>
          <%= listing.course %>
        </td>

        <td>
          <img src='<%= listing.photo_url %>' class='img-fluid'>
        </td>

        <td>
          <%= listing.price %>
        </td>

        <td>
          <%= listing.description %>
        </td>

        <td>
          <% if listing.creator.present? %>
            <a href="/users/<%= listing.creator.id %>">
              <%= listing.creator.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= listing.quarter %>
        </td>

        <td>
          <%= listing.school_year %>
        </td>

        <td>
          <%= listing.tittle %>
        </td>

        <td>
          <%= time_ago_in_words(listing.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(listing.updated_at) %> ago
        </td>

        <td>
          <a href="/listings/<%= listing.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @listings, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
