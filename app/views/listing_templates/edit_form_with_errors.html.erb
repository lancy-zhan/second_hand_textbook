<% if @listing.errors.any? %>
  <% @listing.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit listing #<%= @listing.id %>
</h1>

<hr>

<form action="/update_listing/<%= @listing.id %>" method="post" enctype="multipart/form-data">

  <div class="form-group">
    <label for="transaction_id">
      Transaction
    </label>

    <input type="text" id="transaction_id" name="transaction_id" class="form-control" value="<%= @listing.transaction_id %>">
  </div>

  <div class="form-group">
    <label for="isbn">
      Isbn
    </label>

    <input type="text" id="isbn" name="isbn" class="form-control" value="<%= @listing.isbn %>">
  </div>

  <div class="form-group">
    <label for="course">
      Course
    </label>

    <input type="text" id="course" name="course" class="form-control" value="<%= @listing.course %>">
  </div>

  <div class="form-group">
    <label for="photo_url">
      Photo url
    </label>

    <%= cl_image_tag(@listing.photo_url.to_s, :width => 90, :height => 90, :crop => :thumb) %>
    <input type="file" id="photo_url" name="photo_url" class="form-control">
  </div>

  <div class="form-group">
    <label for="price">
      Price
    </label>

    <input type="text" id="price" name="price" class="form-control" value="<%= @listing.price %>">
  </div>

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control" value="<%= @listing.description %>">
  </div>


  <div class="form-group">
    <label for="quarter">
      Quarter
    </label>

    <input type="text" id="quarter" name="quarter" class="form-control" value="<%= @listing.quarter %>">
  </div>

  <div class="form-group">
    <label for="school_year">
      School year
    </label>

    <input type="text" id="school_year" name="school_year" class="form-control" value="<%= @listing.school_year %>">
  </div>

  <div class="form-group">
    <label for="tittle">
      Tittle
    </label>

    <input type="text" id="tittle" name="tittle" class="form-control" value="<%= @listing.tittle %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update listing
  </button>
</form>

<hr>

<a href="/listings">
  Go back
</a>
