<h1>
  Add a new transaction
</h1>


<hr>

<form action="/create_transaction" method="post">

  <div class="form-group">
    <label for="seller_id">
      Seller
    </label>

    <input type="text" id="seller_id" name="seller_id" class="form-control">
  </div>

  <div class="form-group">
    <label for="buyer_id">
      Buyer
    </label>

    <input type="text" id="buyer_id" name="buyer_id" class="form-control">
  </div>

  <div class="form-check">
    <input type="hidden" value="0" name="sold_status">
    <input id="sold_status" class="form-check-input" name="sold_status" type="checkbox">
    <label for="sold_status" class="form-check-label">
      Sold status
    </label>
  </div>

  <div class="form-check">
    <input type="hidden" value="0" name="completed_status">
    <input id="completed_status" class="form-check-input" name="completed_status" type="checkbox">
    <label for="completed_status" class="form-check-label">
      Completed status
    </label>
  </div>

  <div class="form-group">
    <label for="location">
      Location
    </label>

    <input type="text" id="location" name="location" class="form-control">
  </div>

  <div class="form-group">
    <label for="time">
      Time
    </label>

    <input type="text" id="time" name="time" class="form-control">
  </div>

  <div class="form-group">
    <label for="listing_id">
      Listing
    </label>

    <input type="text" id="listing_id" name="listing_id" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create transaction
  </button>
</form>

<hr>

<a href="/transactions">
  Go back
</a>
