<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All transactions
    </h1>

    <a href="/transactions/new" class="btn btn-block btn-outline-secondary">
      Add a new transaction
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "transaction_templates/transactions_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Seller
        </th>

        <th>
          Buyer
        </th>

        <th>
          Sold status
        </th>

        <th>
          Completed status
        </th>

        <th>
          Location
        </th>

        <th>
          Time
        </th>

        <th>
          Listing
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @transactions.each do |transaction| %>
      <tr>
        <td>
          <%= transaction.id %>
        </td>

        <td>
          <%= transaction.seller_id %>
        </td>

        <td>
          <%= transaction.buyer_id %>
        </td>

        <td>
          <%= transaction.sold_status %>
        </td>

        <td>
          <%= transaction.completed_status %>
        </td>

        <td>
          <%= transaction.location %>
        </td>

        <td>
          <%= transaction.time %>
        </td>

        <td>
          <%= transaction.listing_id %>
        </td>

        <td>
          <%= time_ago_in_words(transaction.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(transaction.updated_at) %> ago
        </td>

        <td>
          <a href="/transactions/<%= transaction.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @transactions, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
