<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All transactions
    </h1>

    <a href="/transactions/new" class="btn btn-block btn-outline-secondary">
      Add a new transaction
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Seller
        </th>

        <th>
          Buyer
        </th>

        <th>
          Sold status
        </th>

        <th>
          Completed status
        </th>

        <th>
          Location
        </th>

        <th>
          Time
        </th>

        <th>
          Listing
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @transactions.each do |transaction| %>
      <tr>
        <!-- Display transaction.id start -->
        <td>
          <%= transaction.id %>
        </td>
        <!-- Display transaction.id end -->

        <!-- Display transaction.seller_id start -->
        <td>
          <%= transaction.seller_id %>
        </td>
        <!-- Display transaction.seller_id end -->

        <!-- Display transaction.buyer_id start -->
        <td>
          <%= transaction.buyer_id %>
        </td>
        <!-- Display transaction.buyer_id end -->

        <!-- Display transaction.sold_status start -->
        <td>
          <%= transaction.sold_status %>
        </td>
        <!-- Display transaction.sold_status end -->

        <!-- Display transaction.completed_status start -->
        <td>
          <%= transaction.completed_status %>
        </td>
        <!-- Display transaction.completed_status end -->

        <!-- Display transaction.location start -->
        <td>
          <%= transaction.location %>
        </td>
        <!-- Display transaction.location end -->

        <!-- Display transaction.time start -->
        <td>
          <%= transaction.time %>
        </td>
        <!-- Display transaction.time end -->

        <!-- Display transaction.listing_id start -->
        <td>
          <%= transaction.listing_id %>
        </td>
        <!-- Display transaction.listing_id end -->

        <!-- Display transaction.created_at start -->
        <td>
          <%= time_ago_in_words(transaction.created_at) %> ago
        </td>
        <!-- Display transaction.created_at end -->

        <!-- Display transaction.updated_at start -->
        <td>
          <%= time_ago_in_words(transaction.updated_at) %> ago
        </td>
        <!-- Display transaction.updated_at end -->

        <td>
          <a href="/transactions/<%= transaction.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
